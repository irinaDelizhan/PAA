<Window x:Class="PAA.UserInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAA.UserInterface"
        mc:Ignorable="d"
        Title="PAA" Height="830" Width="1540"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize">
    <Grid  Background="#FF000B0D">

        <Button Name="buttonEnter" Height="60" Width="196" Content="Enter" FontSize="16" Background="#FF237CA8" Foreground="White" FontWeight="Medium" Margin="0,420,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="buttonEnter_Click"/>
        <Button Name="buttonExit" Height="60" Width="196" Content="Exit" FontSize="16" Background="#FF237CA8" Foreground="White" FontWeight="Medium" Margin="0,500,0,0" VerticalAlignment="Top" HorizontalAlignment="Center" Click="buttonExit_Click"/>

        <Image Source="/Images/logotype.png" Margin="0,60,0,660" Stretch="Uniform" HorizontalAlignment="Center"/>
        <TextBlock Text="PROJECT ACTIVITY ACCOUNTING" FontSize="16" Foreground="#FF59C4F9" Height="29" Width="238" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,160,0,0"/>
        <TextBlock Text="P A A" FontSize="16" Foreground="White" Height="29" Width="40" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,189,0,0"/>

        <TextBlock Text="Login:" FontSize="16" Height="29" Width="76" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="562,244,0,0" Foreground="White"/>
        <TextBox x:Name="textBoxLogin"  FontSize="16" Width="416" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="562,278,0,0"/>
        <TextBlock Text="Password:" FontSize="16" Height="29" Width="76" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="562,324,0,0" Foreground="White"/>
        <PasswordBox x:Name="textBoxPassword" FontSize="16" Width="416" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="562,358,0,0"/>
    </Grid>
</Window>
